<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guild ? `${guild.name} - Painel` : 'Painel de Controle' %></title>
    <link rel="stylesheet" href="/css/styles.css"> 
    <script>
        // Lógica de Tema (Requere classes CSS .dark-mode)
        function toggleTheme() {
            document.body.classList.toggle('dark-mode');
            const theme = document.body.classList.contains('dark-mode') ? 'dark' : 'light';
            localStorage.setItem('theme', theme);
        }
        document.addEventListener('DOMContentLoaded', () => {
            // Aplica o tema salvo ao carregar
            if (localStorage.getItem('theme') === 'dark') {
                document.body.classList.add('dark-mode');
            }
        });
    </script>
</head>
<body>
    <div id="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Bot Dashboard</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="/dashboard" class="<%= activePage === 'home' ? 'active' : '' %>">Início (Servidores)</a>
                </li>
                
                <% if (guild) { %>
                <li class="<%= activePage === 'settings' ? 'active' : '' %>">
                    <a href="/dashboard/<%= guild.id %>">Configurações Gerais</a>
                </li>
                <li class="<%= activePage === 'config' ? 'active' : '' %>">
                    <a href="/dashboard/<%= guild.id %>/config">Comandos</a>
                </li>
                <li class="<%= activePage === 'events' ? 'active' : '' %>">
                    <a href="/dashboard/<%= guild.id %>/events">Logs de Eventos</a>
                </li>
                <% } %>
            </ul>
        </nav>
        
        <div id="content">
            <div class="user-info-bar">
                <div class="user-profile-widget">
                    <img src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png?size=64` : '/images/default-avatar.png' %>" alt="Avatar" class="user-avatar-large">
                    <div class="user-details-group">
                        <span class="user-tag-large"><%= user.username %>#<%= user.discriminator %></span>
                        <span class="user-id">ID: <%= user.id %></span>
                    </div>
                </div>

                <div class="action-buttons-group">
                    <button class="btn btn-theme-toggle" onclick="toggleTheme()">Mudar Tema</button>
                    <a href="/logout" class="btn btn-logout-danger">Sair</a>
                </div>
            </div>
